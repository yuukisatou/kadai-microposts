  <% if current_user.faving?(micropost) %>
    <%= form_for(current_user.favorites.find_by(favpost_id: micropost), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :favpost_id, micropost.id %>
      <%= f.submit "Unlike", class: "btn btn-warning btn-xs" %>
    <% end %>
  <% else %>
    <%= form_for(current_user.favorites.build) do |f| %>
      <%= hidden_field_tag :favpost_id, micropost.id %>
      <%= f.submit "Like", class: "btn btn-success btn-xs" %>
    <% end %>
  <% end %>
